<% include partials/_header %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= user._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="Title" value="<%=user.name%>">
            </div>
            <div class="form-group">
              <input class="form-control" name="password" cols="80" type="password"
                placeholder="Add a Description" value=" <%=user.password%>">
            </div>
            <div class="form-group">
              <input class="form-control" name="password_aes" cols="80" type="password"
                     placeholder="Add a Description" value=" <%=user.password_aes%>">
            </div>
            <button class="btn btn-primary" type="submit">
              Update 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer%>
